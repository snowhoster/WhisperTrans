{
  "whisper": {
    "modelPath": "models/ggml-base.bin",
    "language": "zh",
    "useGpu": true,
    "threadCount": 4,
    "segmentDuration": 2.0,
    "segmentOverlap": 0.5
  },
  "vad": {
    "enabled": true,
    "threshold": 0.02,
    "minSilenceDurationMs": 500
  },
  "audio": {
    "sampleRate": 16000,
    "channels": 1,
    "bufferSizeMs": 100
  },
  "transcription": {
    "maxHistoryLength": 10,
    "enablePartialResults": true
  }
}
